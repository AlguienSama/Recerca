<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/metacss %>
    <title>New APP</title>
  </head>
  <body style="background-color: #f3f3f3;">
    <% include ./partials/navbar %>
    <div class="container-fluid px-5 col-md-6 m-auto">
      <div class="card card-body mt-5">
        <h1 class="text-center mb-3">New APP</h1>
        <% include ./partials/messages %>
        <form action="/app/store" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <p id="authorPost" ><% user.name %></p>
            <label for="nomPost">Name APP</label>
            <input
              type="name"
              id="nomPost"
              name="nomPost"
              class="form-control"
              placeholder="Name"
            />
          </div>
          <div class="form-group">
            <label for="descriptionPost">Description APP</label>
            <input
              type="text"
              id="descriptionPost"
              name="descriptionPost"
              class="form-control"
              placeholder="Description"
            />
          </div>
          <label for="filePost">File Upload</label>
          <div class="custom-file">
            <label for="filePost"></label>
            <input type="file" id="filePost" name="filePost" class="custom-file-input">
            <label for="filePost" class="custom-file-label">File</label>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Create</button>
        </form>
      </div>
    </div>
    <% include ./partials/footer %>
  </body>
</html>
